<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_default"
    tools:context=".mainMenuActivities.UserInfoActivity">

    <TextView
        android:id="@+id/user_info_title"
        style="@style/AppTheme.BasicActivity"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="@string/user_info"
        android:textSize="@dimen/title_medium" />

    <TextView
        android:id="@+id/user_info_full_name_textView"
        style="@style/AppTheme.LargeText"
        android:text="@string/full_name_template" />

    <TextView
        android:id="@+id/user_info_user_name_textView"
        style="@style/AppTheme.LargeText"
        android:text="@string/user_name_template" />

    <TextView
        android:id="@+id/user_info_email_address_textView"
        style="@style/AppTheme.LargeText"
        android:text="@string/email_address_template" />

    <TextView
        android:id="@+id/user_info_phone_number_textView"
        style="@style/AppTheme.LargeText"
        android:text="@string/phone_number_template" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/button"
            android:padding="@dimen/margin_x_x_small"
            android:id="@+id/user_info_reset_favourites_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:tag="@string/reset_favourites"
            android:layout_marginRight="@dimen/text_medium"
            android:text="@string/reset_favourites" />

        <Button
            android:background="@drawable/button"
            android:padding="@dimen/margin_x_x_small"
            android:id="@+id/reset_dislikes_button"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:tag="@string/reset_dislikes"
            android:text="@string/reset_dislikes" />
    </LinearLayout>

</LinearLayout>