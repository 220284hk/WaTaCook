<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0.1dp"
        android:gravity="center_horizontal"
        android:text="@string/please_login_p"
        android:textSize="@dimen/text_large"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/key_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/key_imageView"
        android:layout_width="@dimen/medium_image"
        android:layout_height="@dimen/medium_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_icon" />

    <Button
        app:layout_constraintCircleRadius="@dimen/margin_large"
        android:id="@+id/login_button_num_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>